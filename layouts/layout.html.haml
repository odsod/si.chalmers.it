%html
  %head
    %title= @item[:title]
    %meta{:charset => "utf-8"}
    // Bootstrap styles
    %link{:href => "//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap.min.css", :rel => "stylesheet"}
    %link{:href => "//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap-responsive.min.css", :rel => "stylesheet"}
    // Site stylesheet
    %link{:href => "/syntax.css", :rel => "stylesheet"}
    %link{:href => "/style.css", :rel => "stylesheet"}
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"}
    %script{:src => "//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/js/bootstrap.min.js"}
  %body
    .container
      .row
        %ul.breadcrumb.si-crumbs
          - breadcrumbs_trail.each do |item|
            - if item == @item
              %li.active= item[:title]
            - else
              %li
                =link_to item[:title], item
                %span.divider >
      .row
        = yield
